<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="6dp"
    >

    <LinearLayout
        android:id="@+id/layout_join_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_rejoindre"
            android:layout_width="203dp"
            android:layout_height="200dp"
            android:text="@string/rejoindre_cette_partie_fr"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/player1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/player2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/player3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/player4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/interdiction" />

                <ImageView
                    android:id="@+id/imageView_card2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/transmutation" />

                <ImageView
                    android:id="@+id/imageView_card3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/plus_rapide" />

                <ImageView
                    android:id="@+id/imageView_card4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/echange" />

                <androidx.cardview.widget.CardView
                    android:layout_width="293dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textView_timerJoinGame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAlignment="center" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_card5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/vol" />

                <ImageView
                    android:id="@+id/imageView_card6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/communisme" />

                <ImageView
                    android:id="@+id/imageView_card7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/bonus" />

                <ImageView
                    android:id="@+id/imageView_card8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/joker" />

                <androidx.cardview.widget.CardView
                    android:layout_width="293dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textViewGameId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
