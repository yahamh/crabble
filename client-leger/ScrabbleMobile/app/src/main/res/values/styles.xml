<resources>

    <style name="Widget.Theme.ScrabbleMobile.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">22sp</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="light_theme" parent="Theme.ScrabbleMobile">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:radioButtonStyle">@style/radio_button_theme_light</item>
    </style>

    <style name="radio_button_theme_light" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/black</item>
    </style>

    <style name="dark_theme" parent="Theme.ScrabbleMobile">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radioButtonStyle">@style/radio_button_theme_dark</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorHint">@color/gray_400</item>
    </style>

    <style name="radio_button_theme_dark" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonTint">@color/white</item>
    </style>

    <style name="dialog_dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/background_dark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>
